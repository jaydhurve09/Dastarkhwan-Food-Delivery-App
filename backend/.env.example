# Firebase Configuration
# Copy this file to .env and fill in your Firebase credentials

# Option 1: Direct service account JSON (recommended for deployment)
# FIREBASE_SERVICE_ACCOUNT={"type": "service_account","project_id":"your-project-id",...}

# Option 2: Path to service account JSON file (relative to backend directory)
FIREBASE_CONFIG_PATH=path/to/your/serviceAccountKey.json

# Firebase Database URL
FIREBASE_DATABASE_URL=https://your-project-id.firebaseio.com

# Firebase Storage Bucket (optional - defaults to project-id.appspot.com)
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Secret (generate a strong secret for production)
JWT_SECRET=your_jwt_secret_key_here

# Logging
LOG_LEVEL=debug

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000
